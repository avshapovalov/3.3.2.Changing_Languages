<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text"
            app:layout_constraintTop_toTopOf="parent"/>

        <Spinner
            android:id="@+id/myLanguageSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textExample"/>

        <Button
            android:id="@+id/btn_ChangeLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_language_ru"
            app:layout_constraintTop_toBottomOf="@id/myLanguageSpinner"/>

        <Spinner
            android:id="@+id/myColorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_ChangeLanguage"/>

        <Button
            android:id="@+id/btn_ChangeColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_color"
            app:layout_constraintTop_toBottomOf="@id/myColorSpinner"/>

        <Spinner
            android:id="@+id/myMarginSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_ChangeColor"/>

        <Button
            android:id="@+id/btn_ChangeMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_margins"
            app:layout_constraintTop_toBottomOf="@id/myMarginSpinner"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>